<%= form_with(model: @workshop_order, url: workshops_index_path, class: 'workshop-form rounded-l container mt-10') do |f| %>
  <h4 class="fs-2 fw-bold mb-5">Objedn√°vka workshopu</h4>

  <div class="row g-5">
    <div class="col-12 col-md-6">
      <div class="form-group">
        <%= f.label :name, class: 'form-label' %>  
        <%= f.text_field :name, class: 'form-control' %>
      </div>
    </div>

    <div class="col-12 col-md-6">
      <div class="form-group">
        <%= f.label :email, class: 'form-label' %>
        <%= f.email_field :email, class: 'form-control' %>
      </div>
    </div>

    <div class="col-12 col-md-6">
      <div class="form-group">
        <%= f.label :workshop_type, class: 'form-label' %>
        <%= f.select :wokshop_type, [['Fact-checking', 1], ['Obecny prehled', 2]], {}, { class: 'form-select' } %>
      </div>
    </div>
  </div>

  <div class="form-row">
  </div>
<% end %>
