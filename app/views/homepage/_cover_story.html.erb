<article class="cover-story">
  <% if @cover_story %>
    <% if @cover_story.unique_speakers.length < 3 %>
      <div class="row">
        <div class="columns">
          <h1>
            <%= link_to(@cover_story.title, article_path(@cover_story.id)) %>
          </h1>
        </div>
        <div class="perex large-5 columns">
          <p>
            <%= strip_tags(@cover_story.perex) %>
            <a href="/article/<%= @cover_story.id %>">
              Prohlédnout&nbsp;diskusi
            </a>
          </p>

          <% @cover_story.unique_speakers.each do |speaker| %>
            <%= render(
              partial: "shared/speaker_stat",
              locals: {
                speaker: speaker,
                stats: speaker.stats_for_debate(@cover_story.source),
                lazy_load_images: false
              })
            %>
          <% end %>
        </div>

        <% if @cover_story.illustration %>
          <div class="perex large-7 columns">
            <p>
              <%= image_tag(article_illustration(@cover_story.illustration)) %>
            </p>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="row">
        <div class="columns">
          <h1>
              <%= link_to(@cover_story.title, article_path(@cover_story.id)) %>
          </h1>
        </div>
        <div class="perex large-7 columns">
          <% if @cover_story.illustration %>
            <p>
              <%= image_tag(article_illustration(@cover_story.illustration)) %>
            </p>
          <% end %>

          <p>
            <%= strip_tags(@cover_story.perex) %>
            <a href="<%= article_path(@cover_story.id) %>">
                Prohlédnout&nbsp;diskusi
            </a>
          </p>
        </div>
        <div class="perex large-5 columns">
          <% @cover_story.unique_speakers.each do |speaker| %>
            <%= render(
              partial: "shared/speaker_stat",
              locals: {
                speaker: speaker,
                stats: speaker.stats_for_debate(@cover_story.source),
                lazy_load_images: false
              })
            %>
          <% end %>
        </div>
      </div>
    <% end %>
  <% end %>
</article>
