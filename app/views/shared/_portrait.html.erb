<% if speaker.avatar.attached? %>
  <figure class="portrait">
    <% if local_assigns[:lazy_load_images] == false %>
      <img class="lazy-load" data-src="<%= url_for(speaker.avatar) %>" alt="<%= speaker.full_name %>">
    <% else %>
      <%= image_tag(speaker.avatar, alt: speaker.full_name) %>
    <% end %>
  </figure>
<% end %>
