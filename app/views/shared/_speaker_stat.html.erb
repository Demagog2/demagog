<div class="speaker-stats">
  <figure class="speaker">
    <% if speaker.portrait %>
      <div class="photo-wrapper">
        <% if local_assigns[:lazy_load_images] == false %>
          <img class="lazy-load" data-src="<%= speaker_portrait(speaker.portrait) %>" alt="<%= speaker.full_name %>">
        <% else %>
          <%= image_tag(speaker_portrait(speaker.portrait), alt: speaker.full_name) %>
        <% end %>
      </div>
    <% end %>
    <p class="name"><a href="<%= speaker_path(speaker.id) %>"><%= speaker.full_name %></a></p>
  </figure>
    <ul class="stats">
      <li title="Pravda" class="true <%= "none" if stats[:true].zero? %>">
        <%= stats[:true] %>
      </li>
      <li title="Nepravda" class="untrue <%= "none" if stats[:untrue].zero? %>">
        <%= stats[:untrue] %>
      </li>
      <li title="Zavádějící" class="misleading <%= "none" if stats[:misleading].zero? %>">
        <%= stats[:misleading] %>
      </li>
      <li title="Neověřitelné" class="unverifiable <%= "none" if stats[:unverifiable].zero? %>">
        <%= stats[:unverifiable] %>
      </li>
    </ul>
</div>

