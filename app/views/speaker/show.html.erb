<% content_for(:title, @speaker.full_name) %>

<div class="row politician">
    <div class="large-2 columns">
        <% if @speaker.portrait %>
            <div class="photo-wrapper" style="float: right">
                <img src="<%= speaker_portrait(@speaker.portrait) %>" alt="<%= @speaker.full_name %>" />
            </div>
        <% end %>
    </div>

    <div class="large-10 columns">
        <h1 class="s-speaker-name"><%= @speaker.full_name %> (<%= @speaker.party.short_name %>)</h1>

        <p class="politicianStats">
            <span title="Pravda" class="veracity true">
                <span><%= @stats[:true] %></span>
            </span>
            <span title="Nepravda" class="veracity untrue">
                <span><%= @stats[:untrue] %></span>
            </span>
            <span title="Zavádějící" class="veracity misleading">
                <span><%= @stats[:misleading] %></span>
            </span>
            <span title="Neověřitelné" class="veracity unverifiable">
                <span><%= @stats[:unverifiable] %></span>
            </span>
        </p>

        <iframe src="http://www.facebook.com/plugins/like.php?href=http://demagog.cz/diskusie/269/sobotka-vs-fiala&amp;layout=standard&amp;show_faces=false&amp;width=450&amp;action=like&amp;colorscheme=light&amp;height=30" style="border:none; overflow:hidden; width:450px; height:30px;"></iframe>
    </div>
</div>

<div class="row">
    <div class="columns">
        <h2 id="statements">Výroky</h2>
        <div class="filters">
            <p>
              <%= form_tag(speaker_path(@speaker), method: "GET") do %>
                <%= select_tag(:veracity, options_from_collection_for_select(@veracities, "id", "name", params[:veracity])) %>
                <%= submit_tag("Filtrovat") %>
              <% end %>
            </p>
        </div>
    </div>
</div>

<div class="speakers-details-statements">
  <%= render(partial: 'statement/detail', collection: @statements, as: :statement, locals: { non_attributed: true }) %>

  <div class="row">
    <div class="columns">
      <%= paginate(@statements) %>
    </div>
  </div>
</div>
