<article class="container-article-discussions">
  <h1><%= get_web_content("article.discussions", "title") %></h1>
  <%= raw(get_web_content("article.discussions", "intro")) %>
</article>

<% if @page_number %>
  <p class="full-width"><b>Strana <%= @page_number %></b> z archivu ověřených diskuzí:</p>
<% end %>

<% @articles.each do |article| %>
  <%= render partial: "article/preview", object: article, as: :article %>
<% end %>

<%= paginate(@articles) %>
