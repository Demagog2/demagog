<!DOCTYPE html>
<html lang="cs">
  <head>
    <title>Administrace ᗧ··•··ᗣ·· Demagog.cz</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag 'experimental_admin', media: 'all', 'data-turbolinks-track': 'reload' %>

    <link rel="shortcut icon" href="<%= asset_path("favicon.png") %>" type="image/x-icon" />
  </head>

  <body>
    <% if notice %>
      <div class="bp3-callout bp3-intent-success">
        <%= notice %>
      </div>
    <% end %>

    <% if alert %>
      <div class="bp3-callout bp3-intent-warning">
        <strong>Upozornění:</strong> <%= alert %>
      </div>
    <% end %>

    <div class="page">
      <%= render(partial: "experimental/admin/sidebar", locals: { categories: controller.categories }) %>

      <div class="content">
        <%= yield %>
      </div>
    </div>
  </body>
</html>
</body>
</html>
